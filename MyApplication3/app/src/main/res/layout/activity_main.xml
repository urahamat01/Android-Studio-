<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:ems="10"
            android:id="@+id/EditText"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:hint="@string/number1" tools:layout_editor_absoluteY="91dp" tools:layout_editor_absoluteX="16dp"
            android:inputType="number"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/EditText2"
            android:hint="@string/number2" tools:layout_editor_absoluteY="233dp" tools:layout_editor_absoluteX="16dp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="41dp"
            android:id="@+id/TextView"
            tools:layout_editor_absoluteX="16dp"/>
    <Button
            android:text="@string/button"
            android:layout_width="218dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="346dp"
            android:id="@+id/button" tools:layout_editor_absoluteX="16dp" android:onClick="onButtonClick"/>
</android.support.constraint.ConstraintLayout>
